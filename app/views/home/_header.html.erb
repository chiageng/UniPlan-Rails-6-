        <%= link_to "Logout", logout_path, class:"btn btn-outline-primary my-2 my-sm-0", id: "logout" %>
      <% else %>
        <%= link_to "Login", login_path, class:"btn btn-outline-primary my-2 my-sm-0", id: "login" %>
