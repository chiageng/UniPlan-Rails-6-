<div class="container">
  <section class="mx-auto my-5" style="max-width: 23rem;">
      
    <div class="card">
      <div class="card-body">
        <h5 class="card-title font-weight-bold"><%= @work.work.capitalize %></h5>
        <p class="card-text">
            Created <%= time_ago_in_words(@work.created_at) %> ago,
            edited <%= time_ago_in_words(@work.updated_at) %> ago
        </p>
        <div class="d-flex justify-content-between">
          <p class="display-1 degree"><%= @work.day %></p>
          <i class="fas fa-sun-o fa-5x pt-3 text-warning"></i>
        </div>
        <div class="d-flex justify-content-between mb-4">
          <h4><i class="fas fa-tint fa-lg text-info pe-2"></i><%=readable_time(@work.starttime) %>-<%= readable_time(@work.endtime)%></h4>
          <p><i class="fas fa-leaf fa-lg text-muted pe-2"></i><%= @work.category %></p>
        </div>

        <hr />
        <a class="btn btn-link link-info p-md-1 my-1" data-mdb-toggle="collapse" href="#collapseContent1"
          role="button" aria-expanded="false" aria-controls="collapseContent1">
            <%= link_to "Home", timetables_path, class:"btn btn-primary font-weight-bold"%>
            <%= link_to "Edit", edit_timetable_path(@work), class:"btn btn-success font-weight-bold" %>
            <%= link_to "Delete", @work, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger font-weight-bold"%>
          </a>
      </div>
    </div>
    
  </section>
</div>