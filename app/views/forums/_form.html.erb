<%= form_with model: forum do |form|%>
    <div>
        <%= form.label :topic%><br>
        <%= form.text_field :topic%>
        <% if forum.errors.any? %>
            <% forum.errors.full_messages_for(:topic).each do |message|%>
                <div><%= message %></div>
            <% end %> 
        <% end %>
    </div>

    <div>
        <%= form.label :description%><br>
        <%= form.text_field :description%>
        <% if forum.errors.any? %>
            <% forum.errors.full_messages_for(:description).each do |message|%>
                <div><%= message %></div>
            <% end %> 
        <% end %>
    </div>

    <div>
        <%= form.submit%>
    </div>
<% end %>