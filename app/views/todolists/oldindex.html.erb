<table>
  <thead>
    <tr>
      <th> Pending Work </th>
    </tr>
  </thead>
  <% @works.each do |work| %>
    <% if work.user == current_user  || current_user.admin? %>
      <tbody>
            <td> <%= work.work%> </td>
            <td>
              <%= link_to "Show", todolist_path(work)%>
              <%= link_to "Edit", edit_todolist_path(work)%>
            </td>
            <td><%= link_to "Done", work, method: :delete, data: {confirm: "Are you sure?"} %></td>
            <td> Created by : <%= work.user.username %> </td>
      </tbody>
    <% end %>
  <% end%>
  </tbody>
</table>

<%= link_to "Create", new_todolist_path%>