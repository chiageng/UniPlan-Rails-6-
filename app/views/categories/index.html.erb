<div class="container mt-4" >
    <div class="padding">
        <div class="row container d-flex justify-content-center">

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Cateogories</h4>
                  
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Category</th>
                          <th>Number of Forum-Category</th>
                          <th>Number of User-Category</th>
                          <th>Command</th>
                        </tr>
                      </thead>
                      <tbody>
                      <% @categories.each do |category| %>
                        <tr>
                          <td><%= category.category %></td>
                          <td><%= category.forum.count %></td>
                          <td>Created <%= time_ago_in_words(category.created_at) %> ago</td>
                          <td>
                            <%= link_to "Show", category, class:"btn btn-success font-weight-bold"%>
                            <%= link_to "Edit", edit_category_path(category), class:"btn btn-primary font-weight-bold"%>
                            <%= link_to "Delete", category, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger font-weight-bold"%>
                          </td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="inner-sidebar-header justify-content-center">
                <%= link_to "Create New Category", new_category_path, class: "btn btn-primary has-icon btn-block"%>
            </div>
    </div>
  </div>
</div>